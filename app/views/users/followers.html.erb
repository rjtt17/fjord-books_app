<p><strong><%= t('views.relationship.followers') %></strong></p>
<% @users.each do |user| %>
  <table>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to t('views.common.show'), user_path(user) %></td>
  </tr>
  </table>
<% end %>
<% if @users.size == 0 %>
  <p><%= t('views.relationship.no_follower') %></p>
  <%= link_to t('views.common.back'), user_path(@user) %>
<% end %>
