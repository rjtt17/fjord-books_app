<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= t('views.common.post_time') %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= I18n.l report.created_at, format: :long %></td>
        <td><%= User.find_by(id: report.user_id).email %></td>
        <td><%= link_to t('views.common.show'), report %></td>
        <% if report.user_id == current_user.id %>
          <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports %>

<br>
<%= link_to t('views.common.title_new', name: Report.model_name.human), new_report_path %>
